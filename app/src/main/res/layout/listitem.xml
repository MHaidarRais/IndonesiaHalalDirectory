<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/colorPrimaryDark"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_namakategori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/txt_idkategori"
            android:layout_toStartOf="@+id/txt_idkategori"
            android:fontFamily="@font/advent_pro_semibold"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="KATEGORI"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/white"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/txt_idkategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/txt_namakategori"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            android:fontFamily="@font/advent_pro_semibold"
            android:text="10"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_namakategori"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_chevron_right_black_24dp"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>